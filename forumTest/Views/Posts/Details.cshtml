@model forumTest.Models.PostViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Post.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Post.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Post.User)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Post.Time)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@Html.Partial("_NewComment", new Comment { Id = Guid.NewGuid(), Post=Model.Post.Id })
@Html.Partial("_ListOfComments", new CommentsViewModel(){ Comments = Model.Comments, ParentId = new Guid()})

<!-- jump to comment on load -->    
<script>


    var tmp = "#@ViewData["comment"]";
    if (tmp !== '#') {
        window.location.hash=tmp;
    }
</script>